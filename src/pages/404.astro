---
import BaseLayout from '../layouts/BaseLayout.astro'
import { buttonVariants } from '../components/ui/button'
---

<script>
  import { stagger, spring, timeline, type TimelineDefinition } from 'motion'
  
  const elements = document.querySelectorAll('.animate-item')
  
  const sequence = [
    [
      elements,
      { y: ['40%', '0%'], opacity: [0, 1] },
      {
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ]

  timeline(sequence as TimelineDefinition)
</script>

<BaseLayout
  title="404 - Not Found"
  description="404 Error â€” this page was not found"
>
  <main class="flex h-[80vh] flex-auto">
    <div class="flex flex-col items-center justify-center px-8 w-full max-w-sm mx-auto">
      <img 
        src="/huh.png" 
        alt="404" 
        class="mb-8 w-full max-w-xl animate-item opacity-0"
      />
      <p class="text-sm text-muted-foreground animate-item opacity-0">404</p>
      <h1 class="text-4xl font-extrabold tracking-tight lg:text-3xl animate-item opacity-0">
        Page not found
      </h1>
      <p class="mb-4 leading-7 text-center [&:not(:first-child)]:mt-6 animate-item opacity-0">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <a 
        href="/" 
        rel="noreferrer" 
        class={`${buttonVariants()} animate-item opacity-0`}
      >
        Go back home
      </a>
    </div>
  </main>
</BaseLayout>
